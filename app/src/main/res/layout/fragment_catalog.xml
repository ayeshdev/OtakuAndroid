<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        android:padding="16dp"
        android:orientation="horizontal"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Row 1, Column 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="160dp"
            android:layout_height="276dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            app:cardCornerRadius="8dp"
            android:onClick="onCardClick">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tshirt"
                android:cropToPadding="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="T-Shirt"
                android:layout_marginTop="250dp"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- Row 2, Column 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="160dp"
            android:layout_height="276dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            app:cardCornerRadius="8dp"
            android:onClick="onCardClick">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:src="@drawable/jacket"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jackets"
                android:layout_marginTop="250dp"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- Row 2, Column 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="160dp"
            android:layout_height="276dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardCornerRadius="8dp"
            android:onClick="onCardClick">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:src="@drawable/longsleeve"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Long Sleeves"
                android:layout_marginTop="250dp"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- Row 2, Column 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="160dp"
            android:layout_height="276dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            app:cardCornerRadius="8dp"
            android:onClick="onCardClick">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:src="@drawable/aot"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shirts"
                android:layout_marginTop="250dp"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- Row 2, Column 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="160dp"
            android:layout_height="276dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            app:cardCornerRadius="8dp"
            android:onClick="onCardClick">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:src="@drawable/shorts"
                android:scaleType="centerCrop"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shorts"
                android:layout_marginTop="250dp"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- Row 2, Column 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView7"
            android:layout_width="160dp"
            android:layout_height="276dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            app:cardCornerRadius="8dp"
            android:onClick="onCardClick">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:src="@drawable/collections"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Collections"
                android:layout_marginTop="250dp"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- Row 2, Column 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView8"
            android:layout_width="160dp"
            android:layout_height="276dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            app:cardCornerRadius="8dp"
            android:onClick="onCardClick">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:src="@drawable/newproducts"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Products"
                android:layout_marginTop="250dp"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</ScrollView>